import java.util.Scanner;
//Questão 7

public class Aviso {
	
	public static void main(String[] args) {
	        
	        System.out.print("Digite o número de horas trabalhadas: ");
	        Scanner scanner = new Scanner(System.in);
	        double numeroHoras = scanner.nextDouble();
	       
	        double valorHora = 12.25;
	        double salario = numeroHoras * valorHora;
	       
	
			
			if (salario < 50.00) {
				 System.out.println("Atenção, dirija-se à direção do Hotel!");
			}
	        	
			else {
				System.out.println("Salário a ser recebido: R$ " + salario);
	        }
	        
			}
	       
	        
	    }
	    
